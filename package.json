{
  "name": "@szhsin/react-accordion",
  "version": "0.9.0",
  "description": "An accessible React accordion library",
  "author": "Zheng Song",
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "module": "dist/es/index.js",
  "types": "types/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "files": [
    "dist/",
    "types/*.d.ts",
    "types/components/",
    "types/hooks/"
  ],
  "scripts": {
    "start": "run-p watch \"types -- --watch\"",
    "eg": "npm run dev --prefix example",
    "bundle": "rollup -c",
    "watch": "rollup -c -w",
    "clean": "rm -rf dist types",
    "types": "tsc",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "pret": "prettier -c .",
    "pret:fix": "prettier -w .",
    "test": "jest",
    "test:watch": "jest --watch --verbose",
    "test:cov": "jest --coverage=true",
    "build": "run-s clean pret lint types bundle"
  },
  "peerDependencies": {
    "react": ">=16.14.0",
    "react-dom": ">=16.14.0"
  },
  "dependencies": {
    "react-transition-state": "^2.0.0-alpha.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.3.0",
    "@types/jest": "^28.1.6",
    "@types/react": "^18.0.17",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "babel-plugin-pure-annotations": "^0.1.2",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.8.3",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-hooks-addons": "^0.3.1",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^2.78.0",
    "typescript": "^4.7.4"
  }
}
